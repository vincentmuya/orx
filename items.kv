<ItemsCard>:
    BoxLayout:
        orientation: 'vertical'
        spacing: '50dp'  # Adjust the spacing between elements

        AsyncImage:
            id: image_source
            source: root.image_source
            size_hint: 1, None
            height: '200dp'

        Label:
            text: root.title
            font_size: '18sp'
            size_hint_y: None
            height: '20dp'

        Label:
            text: root.price
            font_size: '18sp'
            size_hint_y: None
            height: '20dp'

        Button:
            text: 'View Details'
            on_release: root.view_product()


<ItemsScreen>:
    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            GridLayout:
                id: items_layout
                cols: 2
