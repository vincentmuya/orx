<ProductDetailsScreen>:
    BoxLayout:
        id: product_details_layout
        orientation: 'vertical'

        Label:
            id: title_label  # Define the ID for the title label
            text: root.title
            font_size: '18sp'
            size_hint_y: None
            height: self.texture_size[1]

        Label:
            id: price_label  # Define the ID for the price label
            text: root.price
            font_size: '16sp'
            size_hint_y: None
            height: self.texture_size[1]

        Label:
            id: description_label  # Define the ID for the price label
            text: root.price
            font_size: '16sp'
            size_hint_y: None
            height: self.texture_size[1]

<ProductDetailsScreen>:

    BoxLayout:
        orientation: 'vertical'
        padding: dp(100)

        AsyncImage:
            source: root.image_source  # Bind the source to the image_source property
            size_hint_y: None
            height: '200dp'  # Set the desired image height

        Label:
            text: root.title
            font_size: '18sp'
            size_hint_y: None

        Label:
            text: root.price
            font_size: '18sp'
            size_hint_y: None

        Label:
            text: root.description
            font_size: '18sp'
            size_hint_y: None
