<ProductCard>:
    orientation: 'vertical'
    padding: dp(100), dp(10), dp(50), dp(10)
    size_hint: None, None
    size: self.minimum_size

    Image:
        source: root.image_source
        size_hint_y: None
        height: dp(200)

    BoxLayout:
        orientation: 'vertical'
        padding: dp(10)

        Label:
            text: root.title
            font_size: '18sp'
            size_hint_y: None
            height: self.texture_size[1]
            on_touch_down: self.parent.parent.view_product()

        Button:
            text: 'View Details'
            on_release: root.view_product()
            size_hint_y: None
            height: dp(40)


<ProductsScreen>:
    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            GridLayout:
                id: products_layout
                cols: 1
                spacing: '10dp'
