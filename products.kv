<ProductCard>:
    orientation: 'vertical'
    size: self.minimum_size

    AsyncImage:
        id: image_source
        source: root.image_source  # Bind the source to the image_source property
        size_hint_y: None
        height: '200dp'  # Set the desired image height

    BoxLayout:
        orientation: 'vertical'
        padding: dp(10)

        Label:
            text: root.title
            font_size: '18sp'
            height: self.texture_size[1]
            on_touch_down: self.parent.parent.view_product()

        Button:
            text: 'View Details'
            on_release: root.view_product()
            height: dp(40)


<ProductsScreen>:
    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            GridLayout:
                id: products_layout
                cols: 1
                spacing: '10dp'
