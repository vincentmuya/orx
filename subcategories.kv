<SubcategoriesScreen>:
    orientation: 'vertical'

    GridLayout:
        id: grid_layout
        cols: 1
        size_hint_y: None
        height: 400  # Set a fixed height for testing
        pos_hint: {'top': 1}  # Align the GridLayout to the top

        Button:
            text: 'Go to Products'
            on_release: root.on_subcategory_button(self)